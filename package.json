{
  "name": "@codemarc/blt",
  "version": "1.4.2",
  "description": "blt cli",
  "type": "module",
  "main": "dist/blt",
  "types": "dist/blt.d.ts",
  "bin": {
    "blt": "dist/blt"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bunx --bun tsc && mv dist/blt.js dist/blt && chmod +x dist/blt",
    "postbuild": "bun run src/commands/version/update.ts",
    "dev": "bunx --bun tsc --watch",
    "start": "bun run src/blt.ts",
    "prepublishOnly": "bun run build",
    "test": "echo \"Tests to be added\" && exit 0"
  },
  "keywords": [
    "blt",
    "cli",
    "schema",
    "postgresql",
    "supabase",
    "database",
    "yaml",
    "sql",
    "migration",
    "deployment"
  ],
  "author": "marc j. greenberg <marc@codemarc.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codemarc/blt-cli.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@caporal/core": "^2.0.7",
    "@supabase/supabase-js": "^2.93.1",
    "build-number-generator": "^3.0.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "file-type": "^17.1.6",
    "js-yaml": "^4.1.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.7",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "sharp": "^0.34.5"
  }
}
